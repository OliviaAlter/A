<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Product">

    <Button
            android:id="@+id/btnBackToCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/back"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@+id/imageView5" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.478"/>

    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="229dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/a"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:id="@+id/productTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/products"
            android:textColor="@color/darkgrey"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ListView
            android:id="@+id/productListView"
            android:layout_width="351dp"
            android:layout_height="432dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/productTextView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.311"/>

</androidx.constraintlayout.widget.ConstraintLayout>







