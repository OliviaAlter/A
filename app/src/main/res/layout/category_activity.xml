<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Category">

    <ImageView
            android:layout_width="196dp"
            android:layout_height="98dp" app:srcCompat="@drawable/a"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="@string/available_categories"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_width="177dp"
            android:layout_height="26dp" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginTop="28dp"/>
    <ListView
            android:id="@+id/list_category"
            android:layout_width="408dp"
            android:layout_height="515dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_weight="1"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.333"/>
    <TextView
            android:text="@string/welcome_to_our_shop"
            android:layout_width="167dp"
            android:textSize="17sp"
            android:layout_height="55dp" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3" app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>